{
  "name": "Ma’a yegue-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Ma’a yegue - Application web d'apprentissage des langues camerounaises",
  "author": "Ma’a yegue Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 50",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "seed-db": "tsx scripts/seed-database.ts",
    "migrate-db": "tsx scripts/migrate-database.ts",
    "create-admin": "node scripts/create-admin.js",
    "create-admin-simple": "node scripts/create-simple-admin.js",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:deploy:storage": "firebase deploy --only storage",
    "deploy:production": "chmod +x scripts/deploy-production.sh && scripts/deploy-production.sh",
    "deploy:staging": "firebase use staging && npm run build && firebase deploy",
    "deploy:netlify": "chmod +x scripts/deploy-netlify.sh && scripts/deploy-netlify.sh",
    "deploy:netlify:prod": "chmod +x scripts/deploy-netlify.sh && scripts/deploy-netlify.sh production",
    "setup:dev": "chmod +x scripts/setup-dev.sh && scripts/setup-dev.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=dot",
    "backup:firestore": "firebase firestore:delete --all-collections --force && firebase firestore:restore"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.4",
    "@stripe/stripe-js": "^8.0.0",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.5",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "firebase": "^10.8.0",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-hook-form": "^7.49.3",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.0",
    "sql.js": "^1.10.2",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "firebase-admin": "^12.0.0",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^2.1.9",
    "workbox-core": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
