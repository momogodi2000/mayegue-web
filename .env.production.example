# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# App Configuration
VITE_APP_NAME="Ma’a yegue - Langues Camerounaises"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Application d'apprentissage des langues traditionnelles camerounaises"
VITE_APP_ENV="production"

# Firebase Production Configuration
VITE_FIREBASE_API_KEY="your-production-api-key"
VITE_FIREBASE_AUTH_DOMAIN="Ma’a yegue-cameroon-languages.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="Ma’a yegue-cameroon-languages"
VITE_FIREBASE_STORAGE_BUCKET="Ma’a yegue-cameroon-languages.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
VITE_FIREBASE_APP_ID="your-production-app-id"
VITE_FIREBASE_MEASUREMENT_ID="your-ga-measurement-id"

# API Endpoints
VITE_API_BASE_URL="https://api.Ma’a yegue.com"
VITE_CAMPAY_API_URL="https://api.campay.net/api"
VITE_NOUPAI_API_URL="https://api.noupai.com"

# AI Services
VITE_GEMINI_API_KEY="your-gemini-api-key"
VITE_OPENAI_API_KEY="your-openai-api-key"

# Payment Configuration
VITE_CAMPAY_APP_USER="your-campay-username"
VITE_CAMPAY_APP_PASS="your-campay-password"
VITE_NOUPAI_CLIENT_ID="your-noupai-client-id"
VITE_NOUPAI_CLIENT_SECRET="your-noupai-client-secret"

# Security
VITE_ENCRYPTION_KEY="your-encryption-key-32-characters"
VITE_JWT_SECRET="your-jwt-secret-key"

# Social Authentication
VITE_GOOGLE_CLIENT_ID="your-google-client-id"
VITE_FACEBOOK_APP_ID="your-facebook-app-id"
VITE_APPLE_CLIENT_ID="your-apple-client-id"

# Feature Flags
VITE_FEATURE_AI_CHAT="true"
VITE_FEATURE_VOICE_RECOGNITION="true"
VITE_FEATURE_OFFLINE_MODE="true"
VITE_FEATURE_PAYMENTS="true"
VITE_FEATURE_COMMUNITY="true"
VITE_FEATURE_GAMIFICATION="true"

# Monitoring and Analytics
VITE_SENTRY_DSN="your-sentry-dsn"
VITE_GOOGLE_ANALYTICS_ID="your-ga-id"
VITE_HOTJAR_ID="your-hotjar-id"
VITE_PERFORMANCE_MONITORING="true"

# PWA Configuration
VITE_PWA_ENABLED="true"
VITE_PWA_UPDATE_POPUP="true"

# Internationalization
VITE_I18N_DEFAULT_LANGUAGE="fr"
VITE_I18N_SUPPORTED_LANGUAGES="fr,en"

# Development Settings (disabled in production)
VITE_DEV_USE_EMULATORS="false"
VITE_DEV_DEBUG_MODE="false"