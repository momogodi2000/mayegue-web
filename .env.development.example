# Development Environment Variables
# Copy this file to .env.local for local development

# App Configuration
VITE_APP_NAME="Ma’a yegue Dev"
VITE_APP_VERSION="1.0.0-dev"
VITE_APP_DESCRIPTION="Application d'apprentissage des langues traditionnelles camerounaises (Development)"
VITE_APP_ENV="development"

# Firebase Development Configuration (using emulators)
VITE_FIREBASE_API_KEY="demo-api-key"
VITE_FIREBASE_AUTH_DOMAIN="Ma’a yegue-dev-environment.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="Ma’a yegue-dev-environment"
VITE_FIREBASE_STORAGE_BUCKET="Ma’a yegue-dev-environment.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789"
VITE_FIREBASE_APP_ID="1:123456789:web:demo-app-id"
VITE_FIREBASE_MEASUREMENT_ID="G-DEMO123"

# API Endpoints (local development)
VITE_API_BASE_URL="http://localhost:5001"
VITE_CAMPAY_API_URL="https://demo.campay.net/api"
VITE_NOUPAI_API_URL="https://sandbox.noupai.com"

# AI Services (development keys)
VITE_GEMINI_API_KEY="demo-gemini-key"
VITE_OPENAI_API_KEY="demo-openai-key"

# Payment Configuration (test/sandbox)
VITE_CAMPAY_APP_USER="demo-user"
VITE_CAMPAY_APP_PASS="demo-pass"
VITE_NOUPAI_CLIENT_ID="demo-client-id"
VITE_NOUPAI_CLIENT_SECRET="demo-client-secret"

# Security (development only)
VITE_ENCRYPTION_KEY="development-key-32-characters-xx"
VITE_JWT_SECRET="development-jwt-secret-key"

# Social Authentication (development)
VITE_GOOGLE_CLIENT_ID="demo-google-client-id"
VITE_FACEBOOK_APP_ID="demo-facebook-app-id"
VITE_APPLE_CLIENT_ID="demo-apple-client-id"

# Feature Flags (all enabled for development)
VITE_FEATURE_AI_CHAT="true"
VITE_FEATURE_VOICE_RECOGNITION="true"
VITE_FEATURE_OFFLINE_MODE="true"
VITE_FEATURE_PAYMENTS="false"
VITE_FEATURE_COMMUNITY="true"
VITE_FEATURE_GAMIFICATION="true"

# Monitoring and Analytics (disabled in development)
VITE_SENTRY_DSN=""
VITE_GOOGLE_ANALYTICS_ID=""
VITE_HOTJAR_ID=""
VITE_PERFORMANCE_MONITORING="false"

# PWA Configuration
VITE_PWA_ENABLED="true"
VITE_PWA_UPDATE_POPUP="false"

# Internationalization
VITE_I18N_DEFAULT_LANGUAGE="fr"
VITE_I18N_SUPPORTED_LANGUAGES="fr,en"

# Development Settings
VITE_DEV_USE_EMULATORS="true"
VITE_DEV_DEBUG_MODE="true"